{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "express", "jsonwebtoken"]
  },
  "include": ["src/**/*", "src/types"],
  "exclude": ["node_modules"]
}
